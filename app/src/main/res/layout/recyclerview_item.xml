<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/offer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body2"
            android:text="Oferta:"
            android:gravity="center_horizontal"
            android:layout_marginStart="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/prop_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/category_text"
            android:layout_alignBottom="@+id/amount_text" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="Imóvel Tipo: "
                android:layout_toRightOf="@id/prop_image"
                android:layout_marginLeft="16dp"
                android:layout_alignParentTop="true"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/space_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_toRightOf="@id/prop_image"
                android:layout_below="@id/category_text"
                android:text="Área Total:"
                android:layout_marginLeft="16dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/bedroom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_toRightOf="@id/prop_image"
                android:layout_below="@id/space_text"
                android:text="Domitório:"
                android:layout_marginLeft="16dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_toRightOf="@id/prop_image"
                android:layout_below="@id/bedroom_text"
                android:text="Vagas:"
                android:layout_marginLeft="16dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/flat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_toRightOf="@id/prop_image"
                android:layout_below="@id/lot_text"
                android:text="Suite:"
                android:layout_marginLeft="16dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/prop_image"
                android:layout_below="@id/flat_text"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_gravity="right"
                android:text="Localização:"
                android:layout_marginLeft="16dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/prop_image"
                android:layout_below="@id/location_text"
                style="@style/TextAppearance.AppCompat.Body2"
                tools:text="Preço:"
                android:layout_marginLeft="16dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>